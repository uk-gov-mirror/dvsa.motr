{{#partial "content" }}
    <header class="content-header">
        <h1 class="content-header__title">
            What is the vehicle's registration (number plate)?
        </h1>
    </header>

    {{#message}}
        {{> partial/error-message }}
    {{/message}}

    {{#showSystemError}}
        {{> partial/system-error }}
    {{/showSystemError}}

    <form method="POST" autocomplete="off" novalidate="">

        <div class="form-group {{#message}}has-error{{/message}}">
            <label for="regNumber" class="form-label">
                Registration (number plate)
            </label>
            {{#showInLine}}
                <span class="validation-message">{{message}}</span>
            {{/showInLine}}
            <input class="form-control" id="regNumber" name="regNumber" type="text" style="text-transform: uppercase;"
                   value="{{vrm}}">
        </div>

        <nav class="content-navigation">
            <input type="submit" value="{{continue_button_text}}" id="continue" class="button">
            <ul class="content-navigation__secondary">
                <li>
                    <a href="{{{url this back_url}}}">{{back_button_text}}</a>
                </li>
            </ul>
        </nav>
    </form>

{{/partial}}
{{> master pageTitle="What is the vehicle’s registration (number plate)? – MOT reminders"}}
