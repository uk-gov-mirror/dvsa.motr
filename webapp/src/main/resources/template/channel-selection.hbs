{{#partial "content" }}

    <div class="grid-row">

        <div class="column-two-thirds">

            <a href="{{{url this back_url}}}" class="link-back">{{back_button_text}}</a>

            {{#message}}
                {{> partial/error-message }}
            {{/message}}

            {{#showSystemError}}
                {{> partial/system-error }}
            {{/showSystemError}}

            <h1 class="heading-xlarge">What type of reminder do you want to get?</h1>

            <form method="POST" autocomplete="off" novalidate="" action="channel-selection">

                <fieldset>

                    <legend class="visuallyhidden" id="channel-selection-input">Choose to have a reminder via email or text message</legend>

                    <div class="form-group {{#message}} form-group-error{{/message}}">

                        {{#message}}
                            <span class="u-space-b15">
                                <span class="error-message">Chose one reminder you want</span>
                            </span>
                        {{/message}}

                        <div class="multiple-choice">
                            <input id="radio-1" type="radio" name="selectChannel" value="email" {{#if isEmailChecked}}checked="checked"{{/if}}>
                            <label for="radio-1">Email</label>
                        </div>
                        <div class="multiple-choice">
                            <input id="radio-2" type="radio" name="selectChannel" value="text"{{#if isTextChecked}}checked="checked"{{/if}}>
                            <label for="radio-2">Text to my mobile phone</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="{{continue_button_text}}" id="continue" class="button">
                    </div>

                </fieldset>

            </form>

        </div>

    </div>
{{/partial}}
